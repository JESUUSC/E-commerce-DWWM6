{% extends 'base.html.twig' %}

{% block title %}Contenu du panier{% endblock %}

{% block body %}
    <h1>Contenu du panier</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantite</th>
                <th>Date_ajout</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contenu_panier in contenu_paniers %}
            <tr>
                <td>{{ contenu_panier.id }}</td>
                <td>{{ contenu_panier.Quantite }}</td>
                <td>{{ contenu_panier.DateAjout ? contenu_panier.DateAjout|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('contenu_panier_show', {'id': contenu_panier.id}) }}">Voir</a>
                    <a href="{{ path('contenu_panier_edit', {'id': contenu_panier.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contenu_panier_new') }}">Nouveau</a>
{% endblock %}
